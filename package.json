{
  "name": "poker-nuts-practice",
  "version": "1.0.3",
  "description": "Minimal CLI for practicing poker nuts identification on flop scenarios",
  "keywords": [
    "poker",
    "cli",
    "nuts",
    "practice",
    "typescript",
    "game"
  ],
  "author": "yisselda",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yisselda/pokernuts.git"
  },
  "bugs": {
    "url": "https://github.com/yisselda/pokernuts/issues"
  },
  "homepage": "https://github.com/yisselda/pokernuts#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "pokernuts": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/cli.js",
    "./engine": "./dist/engine.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "dev:test": "vitest",
    "cli": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "prepublishOnly": "npm run format:check && npm run lint && npm run build && npm test",
    "lint": "eslint . && tsc --noEmit",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
